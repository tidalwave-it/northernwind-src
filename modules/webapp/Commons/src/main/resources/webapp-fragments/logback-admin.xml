    <servlet>
        <servlet-name>LogBackViewStatusMessages</servlet-name>
        <servlet-class>ch.qos.logback.classic.ViewStatusMessagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogBackViewStatusMessages</servlet-name>
        <url-pattern>/admin/logback</url-pattern>
    </servlet-mapping>
</fragment>
